{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ES2015",

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "allowJs": true,
      "allowUnreachableCode": false,
      "noImplicitAny": false,
      "sourceMap": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "lib": ["dom", "esnext"]
    },
    "include": ["src/scripts/system", "src/scripts/3d"],
    "exclude": [
      "node_modules", 
      "**/*.spec.ts", 
      "dist/*", 
      "src/assets/*",
      "src/scripts/ajax.js",
      "src/scripts/plugins/*",
      "src/scripts/preload/*",
      "./typings/**/*"
    ]
  }
  